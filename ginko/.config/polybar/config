[bar/main]

width = 100%
height = 20
override-redirect = false

spacing = 1
padding-left = 2
padding-right = 2
module-margin-left = 2
module-margin-right = 2

modules-left = bspwm
modules-center = date
modules-right = volume

[module/bspwm]
type = internal/bspwm
format = <label-state>

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

[module/date]
type = internal/date
interval = 5
date = "%H:%M - %a - %m/%d"

[module/volume]
type = internal/volume
master-mixer = Master
